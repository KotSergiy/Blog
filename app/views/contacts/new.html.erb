<h2>Контакты</h2>

<%= form_for :contact, url: contacts_path do |f| %>
  <% if @contact && @contact.errors.any? %>
    <p>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
        <% end %>
      </ul>
    </p>
  <% end %>
  <p>
    Электронная почта
    <br>
    <%= f.text_field :email %>
  </p>

  <p>
    Сообщение
    <br>
    <%= f.text_area :message %>
  </p>

  <p>
    <%=f.submit 'Отправить'%>
  </p>
<% end %>
