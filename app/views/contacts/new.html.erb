<h2><%= t('contacts.contact_us') %></h2>

<%= bootstrap_form_for :contact, url: contacts_path do |f| %>
  <% if @contact && @contact.errors.any? %>
    <p>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
        <% end %>
      </ul>
    </p>
  <% end %>
  <p>
    <%= f.text_field :email, label: "Электронная почта" %>
  </p>

  <p>
    <%= f.text_area :message, label: "Сообщение" %>
  </p>

  <p>
    <%=f.primary 'Отправить'%>
  </p>
<% end %>
