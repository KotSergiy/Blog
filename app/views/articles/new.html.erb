<h1>Новая статья</h1>

<%= form_for :article, url: articles_path do |f| %>

  <% if @article && @article.errors.any? %>
    <p>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
        <% end %>
      </ul>
    </p>
  <% end %>

  <p>
    Название
    <br>
    <%= f.text_field :title %>
  </p>

  <p>
    Содержание
    <br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%=f.submit%>
  </p>

<% end %>
