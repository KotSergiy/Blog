<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <%= t('article.author') %>: <strong><%= @user.username%></strong> 
      <h2><%= @article.title %></h2>
      <p><%= @article.text %></p>
      <hr>

      <%= bootstrap_form_for([@article, @article.comments.build]) do |f| %>
        <p><%= f.text_area :body, label: "Ваш комментарий", required: true %></p>
        <p><%=f.primary "Отправить"%></p>
      <% end %>
      <br>

      <%@article.comments.each do |comment|%>
        <p>
          <strong><%= comment.author %></strong>
          <small><%= comment.created_at %></small>
          <br>
          <%= comment.body %>
        </p>
      <%end%>

    </div>
  </div>
</div>
