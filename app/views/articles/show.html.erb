<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <h2><%= @article.title %></h2>
      <p><%= @article.text %></p>
      <hr>

      <h5>Ваш комментарий</h5>
      <%= form_for([@article, @article.comments.build]) do |f| %>
        <p><%= f.text_area :body %></p>
        <p><%=f.submit%></p>
      <% end %>
      <br>

      <%@article.comments.each do |comment|%>
        <p>
          <strong><%= comment.author %></strong>
          <small> в <%= comment.created_at %></small>
          <br>
          <%= comment.body %>
        </p>
      <%end%>

    </div>
  </div>
</div>
